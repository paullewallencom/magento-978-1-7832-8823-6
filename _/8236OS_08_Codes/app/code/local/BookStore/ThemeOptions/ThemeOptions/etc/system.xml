<config>
  <tabs>
    <bookstore translate="label">
      <label>BookStore Theme</label>
      <sort_order>000</sort_order>
    </bookstore>
  </tabs>
  <sections>
    <bookstore translate="label">
      <label>Theme Options</label>
      <tab>bookstore</tab>
      <frontend_type>text</frontend_type>
      <sort_order>1000</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <typography translate="label" module="themeoptions">
          <label>Typography</label>
          <frontend_type>text</frontend_type>
          <sort_order>01</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <font_text translate="label">
			  <label>Text Font: </label>
			  <comment>Custom Source model Font</comment>
			  <frontend_type>select</frontend_type>
			  <sort_order>1</sort_order>
			  <show_in_default>1</show_in_default>
			   <show_in_website>1</show_in_website>
			  <show_in_store>1</show_in_store>
			  <source_model>themeoptions/source_font</source_model>
			</font_text>
			<font_text_size translate="label">
              <label>Text Font Size: </label>
              <comment>Source model provider Magento's default Yes/No values</comment>
              <frontend_type>select</frontend_type>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
			  <source_model>themeoptions/source_fontsize</source_model>
            </font_text_size>
            <font_titles translate="label">
              <label>Titles Font: </label>
              <comment>Choose the font for Titles</comment>
              <frontend_type>select</frontend_type>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
			  <source_model>themeoptions/source_font</source_model>
            </font_titles>
          </fields>
        </typography>
        <header translate="label" module="themeoptions">
          <label>Header Settings</label>
          <frontend_type>text</frontend_type>
          <sort_order>02</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <logo translate="label" module="themeoptions">
              <label>Logo</label>
              <frontend_type>file</frontend_type>
              <backend_model>adminhtml/system_config_backend_file</backend_model>
              <upload_dir>media/bookstore</upload_dir>
              <sort_order>00</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </logo>
            <topheader_heading translate="label">
              <label>Top Header</label>
              <comment>Comment ajsdjlsadj</comment>
              <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
              <sort_order>00</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </topheader_heading>
            <topheader_enable translate="label">
              <label>Enable Top Header</label>
             <comment>
			    <![CDATA[
			        <script type="text/javascript">
			            Event.observe('bookstore_header_topheader_enable', 'change', function() {
			                alert('Warning! This will hide the top bar!');
			            })
			        </script>
			    ]]>
			    </comment>
			    <frontend_type>select</frontend_type>
              <sort_order>01</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <source_model>adminhtml/system_config_source_yesno</source_model>
            </topheader_enable>
            <topheader_color1 translate="label">
              <label>Top Header Background: </label>
              <comment>Click to select the background color</comment>
              <frontend_type>text</frontend_type>
              <validate>color</validate>
              <sort_order>02</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <depends>
                <topheader_enable>1</topheader_enable>
              </depends>
            </topheader_color1>
            <topheader_color2 translate="label">
              <label>Top Header Border and Button Color: </label>
              <comment>Click to select the color</comment>
              <frontend_type>text</frontend_type>
              <validate>color</validate>
              <sort_order>03</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <depends>
                <topheader_enable>1</topheader_enable>
              </depends>
            </topheader_color2>
            <telephone translate="label">
              <label>Telephone Number: </label>
              <comment>Insert here the Phone number of your company, will be displayed in the top header</comment>
              <frontend_type>text</frontend_type>
              <sort_order>04</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <depends>
                <topheader_enable>1</topheader_enable>
              </depends>
			  <validate>validate-password</validate>
            </telephone>
            <navigation_heading translate="label">
              <label>Navigation</label>
              <comment>Comment ajsdjlsadj</comment>
              <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
              <sort_order>11</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </navigation_heading>
            <menu_bg translate="label">
              <label>Navigation Background Color: </label>
              <comment>Click to select the background color</comment>
              <frontend_type>text</frontend_type>
              <validate>color</validate>
              <sort_order>12</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </menu_bg>
          </fields>
        </header>
        <footer translate="label" module="themeoptions">
          <label>Social Settings</label>
          <frontend_type>text</frontend_type>
          <sort_order>03</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <footer_bg translate="label">
              <label>Footer Bg Color</label>
              <comment>Click to select the background color</comment>
              <frontend_type>text</frontend_type>
              <sort_order>01</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </footer_bg>
            <social_heading translate="label">
              <label>Social Links</label>
              <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </social_heading>
            <facebook translate="label">
              <label>Facebook</label>
              <comment>Example: http://www.facebook.com/bookstore</comment>
              <frontend_type>text</frontend_type>
              <sort_order>11</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </facebook>
            <twitter translate="label">
              <label>Twitter</label>
              <comment>Example: http://twitter.com/bookstore</comment>
              <frontend_type>text</frontend_type>
              <sort_order>12</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </twitter>
            <google translate="label">
              <label>Google+ </label>
              <comment>Example: http://plus.google.com/+Bookstore</comment>
              <frontend_type>text</frontend_type>
              <sort_order>13</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <validate>validate-number</validate>
            </google>
          </fields>
        </footer>
        <book translate="label" module="themeoptions">
          <label>Example fields</label>
          <frontend_type>text</frontend_type>
          <sort_order>999</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <text_field translate="label">
              <label>Input Text Field</label>
              <frontend_type>text</frontend_type>
              <sort_order>00</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </text_field>
            <textarea translate="label">
			    <label>Textarea</label>
			    <frontend_type>textarea</frontend_type>
			    <sort_order>10</sort_order>
			    <show_in_default>1</show_in_default>
			    <show_in_website>1</show_in_website>
			    <show_in_store>1</show_in_store>
			</textarea>
            <topheader_heading translate="label">
              <label>Example Heading Field</label>
              <comment>Comment </comment>
              <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
              <sort_order>11</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </topheader_heading>
            <enabled translate="label">
              <label>Dropdown select Yes/No</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>20</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </enabled>
            <active translate="label">
              <label>Dropdown Select Enable/Disable</label>
              <frontend_type>select</frontend_type>
              <sort_order>30</sort_order>
              <source_model>adminhtml/system_config_source_enabledisable</source_model>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </active>
            <file translate="label comment">
              <label>File Upload</label>
              <frontend_type>file</frontend_type>
              <backend_model>adminhtml/system_config_backend_file</backend_model>
              <upload_dir>var/uploads</upload_dir>
              <sort_order>40</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>
            </file>
          </fields>
        </book>
      </groups>
    </bookstore>
  </sections>
</config>
